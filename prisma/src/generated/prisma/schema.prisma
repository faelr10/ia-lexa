generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = "mongodb://root:rootpassword@localhost:27017/ia_lexa?authSource=admin"
}

model schedule {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  assunto   String
  descricao String
  dia       String
  horario   String
}
